{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ compilar usando Makefile",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${fileDirname}/*.h",
        "${fileDirname}/*.cc",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": [ "$gcc" ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compilador: /usr/bin/g++"
    }
  ]
}