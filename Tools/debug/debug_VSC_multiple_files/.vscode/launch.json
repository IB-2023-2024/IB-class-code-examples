  "version": "0.2.0",
  "configurations": [
    {
      "name": "make - Compilar y depurar el archivo activo",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Habilitar la impresión con sangría para gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: g++ compilar archivo activo usando Makefile",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}